costume "costume1" "assets/sprite.svg" 32 32;

use animation;

private var start_time = 0;
private var current_time = 0;

#[on_flag_clicked]
fn start() {
    set_size_to(0);
    show();
    
    reset_timer();
    start_time = timer();
    
    until timer() > (start_time + 1) {
        current_time = timer();
        set_size_to(animation::ease("Back", (current_time - start_time) * 100, 0, 200, false, true));
    }
    
    set_size_to(200);
}
