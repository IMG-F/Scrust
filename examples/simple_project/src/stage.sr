// Stage scripts
// The stage usually handles background logic or game initialization

costume "stage_bg" "assets/stage_bg.svg";

public var SCORE = 0;
public list HIGHSCORES = [10, 20, 30];

proc reset_game() {
    SCORE = 0; // Reset global score
    delete_all_of_list("HIGHSCORES");
}

/// Initialize the game state
#[on_flag_clicked]
fn init() {
    reset_game();
}
